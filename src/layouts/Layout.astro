---
const title = "DIM Stream Deck";
const description = "Stream Deck plugin for Destiny Item Manager";
const { path } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta
      name="keywords"
      content="Elgato Stream Deck, Destiny 2, Destiny Item Manager, Rust"
    />
    <meta name="author" content="Francesco Saverio Cannizzaro" />
    <meta
      property="og:url"
      content={`https://dimstreamdeck.vercel.app/${path}`}
    />
    <meta
      property="og:image"
      content="https://dimstreamdeck.vercel.app/preview.png"
    />
    <meta name="description" content={description} />
    <meta name="og:description" content={description} />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
  </head>
  <div class="toolbar py-4">
    <div class="container mx-auto px-4 text-center text-white my-2">
      <img width={250} src="/logo.png" class="mx-auto" />
      <h4 class="text-7xl font-medium">DIM</h4>
      <p class="text-5xl font-normal subtitle mt-2 pb-2 opacity-70">
        for Elgato Stream Deck
      </p>
      <div class="flex justify-center mt-6 flex-wrap">
        <a
          href="https://github.com/dim-stream-deck/com.dim.streamdeck/actions/workflows/publish-package.yaml"
          target="_blank"
        >
          <img
            src="https://github.com/dim-stream-deck/com.dim.streamdeck/actions/workflows/publish-package.yaml/badge.svg"
            class="mb-2"
          />
        </a>
        <a
          href="https://apps.elgato.com/plugins/com.dim.streamdeck"
          target="_blank"
        >
          <img
            src="https://img.shields.io/badge/dynamic/json?logo=elgato&label=elgato&query=%24.plugins%5B%3F%28%40.identifier%3D%3D%22com.dim.streamdeck%22%29%5D.downloads&suffix=%20downloads&url=https%3A%2F%2Fappstore.elgato.com%2FstreamDeckPlugin%2Fcatalog.json"
            class="ml-2 mb-2"
          />
        </a>
        <a
          href="https://github.com/dim-stream-deck/com.dim.streamdeck/releases/latest"
          target="_blank"
        >
          <img
            src="https://img.shields.io/github/v/release/dim-stream-deck/com.dim.streamdeck?label=plugin&logo=github"
            class="ml-2 mb-2"
          />
        </a>
        <a
          href="https://github.com/dim-stream-deck/com.dim.streamdeck"
          target="_blank"
        >
          <img
            src="https://img.shields.io/github/license/dim-stream-deck/com.dim.streamdeck"
            class="ml-2 mb-2"
          />
        </a>
      </div>
    </div>
  </div>
  <slot />

  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
      --dim: #ff7f04;
      --accent: #e8a534;
    }
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }

    body {
      min-height: 100vh;
      background: radial-gradient(
        circle at 50% 70px,
        hsl(240deg, 20%, 28%) 0%,
        hsl(240deg, 27%, 12%) 100%
      );
    }
    .toolbar {
      background-color: rgba(0, 0, 0, 0.25);
    }
    h4,
    .subtitle {
      background: linear-gradient(var(--dim), var(--accent));
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .changelog a {
      text-decoration: underline !important;
      font-weight: 600 !important;
    }
  </style>


</html>

---
const title = "DIM Stream Deck | v2.0.0";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Stream Deck plugin for Destiny Item Manager"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="toolbar py-4">
      <div class="container mx-auto px-4 text-center text-white my-2">
        <img width={250} src="/logo1.png" class="mx-auto" />
        <h4 class="text-7xl font-medium">DIM</h4>
        <p class="text-5xl font-normal subtitle mt-2 pb-2">
          for Elgato Stream Deck
        </p>
        <div class="flex justify-center mt-6 flex-wrap">
          <img
            src="https://github.com/dim-stream-deck/com.dim.streamdeck/actions/workflows/build-plugin.yaml/badge.svg"
            class="mb-2"
          />
          <img
            src="https://img.shields.io/badge/dynamic/json?logo=elgato&label=elgato&query=%24.plugins%5B%3F%28%40.identifier%3D%3D%22com.dim.streamdeck%22%29%5D.downloads&suffix=%20downloads&url=https%3A%2F%2Fappstore.elgato.com%2FstreamDeckPlugin%2Fcatalog.json"
            class="ml-2 mb-2"
          />
          <img
            src="https://img.shields.io/github/v/release/dim-stream-deck/com.dim.streamdeck?label=plugin&logo=github"
            class="ml-2 mb-2"
          />
          <img
            src="https://img.shields.io/github/license/dim-stream-deck/com.dim.streamdeck"
            class="ml-2 mb-2"
          />
        </div>
      </div>
    </div>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&display=swap");

  :root {
    --dim: #ff7f04;
    --accent: #e8a534;
  }

  html {
    font-family: "Open Sans", system-ui, sans-serif;
  }

  body {
    background: radial-gradient(
      circle at 50% 70px,
      hsl(240deg, 20%, 28%) 0%,
      hsl(240deg, 27%, 12%) 100%
    );
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .toolbar {
    background-color: rgba(0, 0, 0, 0.25);
  }
  h4,
  .subtitle {
    background: linear-gradient(var(--dim), var(--accent));
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

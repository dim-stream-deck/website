---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout>
	<main class="container sm:mx-auto mt-8 mx-4">
		<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 pb-8">
			<Card
				id="loadout"
				name="Equip Loadout"
				description="Choose and equip any loadout."
				tags={["loadout", "equipment"]}
				taps={{
					single: "equip the loadout",
					double: "unequip the loadout",
					long: "unequip the loadout",
				}}
			/>
			<Card
				id="search"
				name="Search"
				description="Trigger the search with a custom query and multiple pages."
				tags={["search", "items", "pullable"]}
				taps={}
			/>
			<Card
				id="refresh"
				name="Refresh DIM"
				description="Invoke the refresh action on DIM"
				tags={["ui"]}
				taps={{
					single: "trigger action"
				}}
			/>
			<Card
				id="farming"
				name="Farming Mode"
				description="Activate / Turn off the DIM farming mode"
				tags={["ui"]}
				taps={{
					single: "enable/disable"
				}}
			/>
			<Card
				id="app"
				name="Open DIM"
				description="Open a specific flavor (app/beta) DIM application"
				tags={["utility"]}
				taps={{
					single: "open app"
				}}
	
			/>
			<Card
				id="metrics"
				name="Metrics"
				description="Show ranking progress (vanguard / crucible / gambit, etc) or other metrics value (seasonal rank, etc)"
				tags={["progress"]}
			/>
			<Card
				id="vault"
				name="Vault"
				description="Show currencies and vault counter"
				tags={["inventory", "counters"]} />
			<Card
				id="pull-item"
				name="Pull/Equip Item"
				description="Move/Equip weapons, armor or consumables from/to the vault or other characters"
				taps={{
					single: "pull an item",
					long: "equip an item"
				}}
				tags={["items", "equipment"]} />
			<!--
			<Card
				id="postmaster"
				name="Postmaster"
				description="Open a specific flavor (app/beta) DIM application"
				tags={["utility", "counters"]} />
			<Card
				id="max-power"
				name="Max Power"
				description="Open a specific flavor (app/beta) DIM application"
				tags={["utility", "power"]} /> -->
			<Card
				id="rotation"
				name="Rotation (WIP)"
				description="Show the daily/weekly rotation of some activities"
				tags={["utility", "daily"]} />
		/>
		</div>
	</main>
</Layout>

